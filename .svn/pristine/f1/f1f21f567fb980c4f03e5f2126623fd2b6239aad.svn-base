/* 注册 */
#loginbar {
    width: 100%;
    margin: 0 auto;
    background: url("../images/loginimg/loginbg.jpg") no-repeat center;
    .loginbg {
      width: 100%;
      height: 600px;
      .login {
        background-color: #fff;
        overflow: hidden;
        position: relative;
        width: 350px;
        height: 405px;
        top: 100px;
        left: 750px;
        .login-t {
          width: 100%;
          font: 18px/54px "微软雅黑";
          text-align: center;
          border-bottom: 1px solid rgb(228, 225, 225);
        }
        .login-c {
          width: 287px;
          margin: 0 auto;
          .login2 {
            display: inline-block;
            width: 39px;
            height: 38px;
            background: rgba(246,246,246,0.50);
            border-right: 1px solid #ccc;
            left: 10px;
            text-align: center;
            line-height: 38px;
          }
          .login1 {
            width: 288px;
            height: 40px;
            border: 1px solid #ccc;
            margin-top: 20px;
            .name1 {
              display: block;
              font: 15px/18px "酷黑软雅";
              color: #e33938;
            }
            .pass111 {
              display: block;
              font: 15px/18px "酷黑软雅";
              color: #e33938;
            }
          }
          input {
            width: 200px;
            height: 38px;
            border: none;
            padding-left: 5px;
            font: 14px/21px "宋体";
            outline: medium;
          }
          .forget {
            margin: 10px;
            overflow: hidden;
            span {
              &:hover {
                a {
                  color: #e33938;
                }
              }
            }
            .forget-l {
              float: left;
            }
            .forget-r {
              float: right;
            }
          }
        }
        .login-b {
          margin: 50px 0 0 40px;
          font: 12px/24px "宋体";
          a {
            color: #e33938;
          }
          i {
            margin: 0 10px;
          }
        }
      }
    }
  }
  #but {
    text-align: center;
    font: 20px/40px "楷体";
    width: 287px;
    height: 40px;
    color: #fff;
    margin-top: 26px;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    outline: medium;
    background-image: linear-gradient(-180deg, #ff2f2d 0%, #e33938 100%);
    &:active {
      background: #e79898;
    }
  }
  